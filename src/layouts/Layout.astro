---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "个人 Prompt 知识库，系统化管理高质量提示词" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Prompt 知识库</title>
		<meta name="description" content={description} />
	</head>
	<body class="bg-[#f2f1ed] text-slate-900 min-h-screen flex flex-col font-sans selection:bg-indigo-100 selection:text-indigo-900">
		<header class="bg-[#f2f1ed]/80 backdrop-blur-md sticky top-0 z-50 transition-all duration-300">
			<nav class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
				<a href="/" class="flex items-center gap-3 group">
					<div class="w-10 h-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white font-black italic group-hover:rotate-6 transition-transform shadow-lg shadow-indigo-200">P</div>
					<span class="text-lg font-bold bg-clip-text text-transparent bg-gradient-to-r from-slate-900 to-slate-600">Prompt 实验室</span>
				</a>
				<div class="flex items-center gap-1 bg-slate-100/50 p-1.5 rounded-2xl border border-slate-100 hidden md:flex">
					<a href="/" class="px-5 py-2 rounded-xl text-sm font-bold text-slate-600 hover:text-indigo-600 hover:bg-white transition-all">首页</a>
					<a href="/prompts" class="px-5 py-2 rounded-xl text-sm font-bold text-slate-600 hover:text-indigo-600 hover:bg-white transition-all">提示词</a>
					<a href="/about" class="px-5 py-2 rounded-xl text-sm font-bold text-slate-600 hover:text-indigo-600 hover:bg-white transition-all">关于</a>
				</div>
				<div class="flex items-center gap-4">
					<button class="hidden lg:flex items-center gap-2 px-4 py-2 bg-white border border-slate-200 rounded-xl text-xs font-bold text-slate-400 hover:border-slate-300 transition-colors shadow-sm">
						<span>⌘</span>
						<span>K</span>
					</button>
					<div class="w-10 h-10 rounded-full bg-slate-200 border-2 border-white shadow-sm overflow-hidden flex items-center justify-center">
						<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
					</div>
				</div>
			</nav>
		</header>

		<main class="flex-grow py-12 md:py-20 relative">
			<slot />
		</main>

		<footer class="bg-white border-t border-slate-100 py-12">
			<div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-8">
				<div class="flex items-center gap-3">
					<div class="w-8 h-8 bg-slate-100 rounded-lg flex items-center justify-center text-slate-400 font-bold italic text-xs">P</div>
					<span class="text-sm font-bold text-slate-400">© {new Date().getFullYear()} Prompt 实验室</span>
				</div>
				<div class="flex gap-8 text-sm font-bold text-slate-400">
					<a href="#" class="hover:text-slate-600 transition-colors">GitHub</a>
					<a href="#" class="hover:text-slate-600 transition-colors">Twitter</a>
					<a href="#" class="hover:text-slate-600 transition-colors">Discord</a>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
