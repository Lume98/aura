---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPrompts = await getCollection('prompts');
const categories = [...new Set(allPrompts.map(p => p.data.category))];

// 按照日期倒序排列
const sortedPrompts = allPrompts.sort((a, b) => (b.data.date?.valueOf() || 0) - (a.data.date?.valueOf() || 0));
---

<Layout title="提示词库" description="浏览和发现各种高质量的 AI 提示词。">
	<div class="max-w-7xl mx-auto px-6">
		<header class="mb-16 flex flex-col lg:flex-row lg:items-end justify-between gap-10">
			<div class="max-w-2xl">
				<h1 class="text-4xl md:text-5xl font-black text-slate-900 mb-6 tracking-tight">提示词库</h1>
				<p class="text-lg text-slate-500 font-medium leading-relaxed">
					共收集了 <span class="text-indigo-600 font-bold">{allPrompts.length}</span> 个精心调优的提示词，旨在协助您在编码、写作与设计中释放 AI 的全部潜力。
				</p>
			</div>
			<div class="relative w-full lg:w-[400px] group">
				<div class="absolute -inset-0.5 bg-gradient-to-r from-indigo-500/10 to-blue-500/10 rounded-2xl blur opacity-0 group-focus-within:opacity-100 transition duration-500"></div>
				<div class="relative flex items-center">
					<input 
						type="text" 
						id="search-input"
						placeholder="搜索提示词、标签或分类..." 
						class="w-full pl-12 pr-4 py-4 bg-white border border-slate-200 rounded-2xl focus:outline-none focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all text-sm font-medium shadow-sm"
					/>
					<svg class="absolute left-4 h-5 w-5 text-slate-300 group-focus-within:text-indigo-500 transition-colors" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
						<path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
					</svg>
					<div class="absolute right-4 px-1.5 py-0.5 bg-slate-50 border border-slate-100 rounded text-[10px] font-bold text-slate-400 select-none">/</div>
				</div>
			</div>
		</header>

		<div class="flex flex-col lg:flex-row gap-12">
			<!-- Sidebar Filter -->
			<aside class="w-full lg:w-72 shrink-0 space-y-12">
				<div>
					<h2 class="text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">全部分类</h2>
					<ul class="space-y-2">
						<li>
							<a href="/prompts" class="flex items-center justify-between px-4 py-3 rounded-xl bg-white border border-indigo-100 text-indigo-600 font-bold shadow-sm shadow-indigo-100/50 transition-all">
								<span class="text-sm">所有提示词</span>
								<span class="text-[10px] bg-indigo-50 px-2 py-0.5 rounded-full">{allPrompts.length}</span>
							</a>
						</li>
						{categories.map(category => (
							<li>
								<a href={`/prompts/category/${category}`} class="flex items-center justify-between px-4 py-3 rounded-xl border border-transparent hover:border-slate-200 hover:bg-white text-slate-500 hover:text-slate-900 transition-all group">
									<span class="text-sm font-bold group-hover:translate-x-1 transition-transform">{category}</span>
									<span class="text-[10px] bg-slate-100 px-2 py-0.5 rounded-full group-hover:bg-slate-200 transition-colors">
										{allPrompts.filter(p => p.data.category === category).length}
									</span>
								</a>
							</li>
						))}
					</ul>
				</div>

				<div>
					<h2 class="text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">热门标签</h2>
					<div class="flex flex-wrap gap-2">
						{[...new Set(allPrompts.flatMap(p => p.data.tags))].map(tag => (
							<a href={`/prompts/tag/${tag}`} class="text-[11px] font-bold px-3 py-1.5 bg-white border border-slate-100 rounded-lg text-slate-500 hover:border-indigo-200 hover:text-indigo-600 hover:shadow-sm transition-all">
								#{tag}
							</a>
						))}
					</div>
				</div>

				<div class="p-6 bg-indigo-600 rounded-3xl text-white relative overflow-hidden shadow-xl shadow-indigo-200 group">
					<div class="relative z-10">
						<h3 class="font-black text-xl mb-2">需要定制？</h3>
						<p class="text-sm text-indigo-100 font-medium mb-6 leading-relaxed opacity-80">
							告诉 AI Agent 您的需求，为您即时生成专属提示词。
						</p>
						<a href="/" class="inline-flex items-center gap-2 bg-white text-indigo-600 px-5 py-2.5 rounded-xl text-sm font-black hover:scale-105 transition-transform">
							进入实验室
							<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
						</a>
					</div>
					<div class="absolute -right-4 -bottom-4 w-32 h-32 bg-white/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
				</div>
			</aside>

			<!-- List Grid -->
			<div class="flex-grow">
				<div id="prompts-grid" class="grid md:grid-cols-2 gap-8">
					{sortedPrompts.map(prompt => (
						<article 
							class="prompt-card group bg-white border border-slate-100 rounded-[2rem] p-8 hover:shadow-2xl hover:shadow-indigo-500/5 hover:-translate-y-1 transition-all duration-500 flex flex-col h-full relative overflow-hidden"
							data-title={prompt.data.title.toLowerCase()}
							data-description={prompt.data.description?.toLowerCase() || ''}
							data-category={prompt.data.category.toLowerCase()}
							data-tags={prompt.data.tags.join(',').toLowerCase()}
						>
							<div class="absolute top-0 right-0 p-8 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
								<div class="w-10 h-10 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600">
									<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
								</div>
							</div>

							<div class="flex items-center gap-4 mb-6">
								<span class="text-[10px] font-black px-3 py-1 bg-indigo-50 text-indigo-600 rounded-full uppercase tracking-widest">
									{prompt.data.category}
								</span>
								<time class="text-[11px] font-bold text-slate-300 tabular-nums">
									{prompt.data.date?.toLocaleDateString('zh-CN')}
								</time>
							</div>

							<h3 class="text-2xl font-black mb-4 tracking-tight group-hover:text-indigo-600 transition-colors">
								<a href={`/prompts/${prompt.id}`}>
									{prompt.data.title}
								</a>
							</h3>
							
							<p class="text-slate-500 text-[15px] font-medium leading-relaxed mb-8 flex-grow">
								{prompt.data.description}
							</p>

							<div class="flex flex-wrap gap-2 mt-auto pt-6 border-t border-slate-50">
								{prompt.data.tags.map(tag => (
									<span class="text-[10px] font-bold px-2 py-1 bg-slate-50 text-slate-400 rounded-lg group-hover:bg-indigo-50 group-hover:text-indigo-400 transition-colors">
										#{tag}
									</span>
								))}
							</div>
						</article>
					))}
				</div>
				
				<div id="no-results" class="hidden py-32 text-center">
					<div class="w-20 h-20 bg-slate-50 rounded-3xl flex items-center justify-center mx-auto mb-6">
						<svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
					</div>
					<h3 class="text-xl font-black text-slate-900 mb-2">未找到匹配项</h3>
					<p class="text-slate-500 font-medium">请尝试其他关键词或浏览全部分类。</p>
				</div>
			</div>
		</div>
	</div>
</Layout>

<script is:inline>
	const searchInput = document.getElementById('search-input');
	const promptCards = document.querySelectorAll('.prompt-card');
	const noResults = document.getElementById('no-results');
	const promptsGrid = document.getElementById('prompts-grid');

	searchInput?.addEventListener('input', (e) => {
		const query = e.target.value.toLowerCase().trim();
		let visibleCount = 0;

		promptCards.forEach(card => {
			const title = card.getAttribute('data-title');
			const description = card.getAttribute('data-description');
			const tags = card.getAttribute('data-tags');
			const category = card.getAttribute('data-category');
			
			if (title.includes(query) || description.includes(query) || tags.includes(query) || category.includes(query)) {
				card.classList.remove('hidden');
				visibleCount++;
			} else {
				card.classList.add('hidden');
			}
		});

		if (visibleCount === 0) {
			noResults.classList.remove('hidden');
			promptsGrid.classList.add('hidden');
		} else {
			noResults.classList.add('hidden');
			promptsGrid.classList.remove('hidden');
		}
	});

	// Keyboard shortcut for search
	window.addEventListener('keydown', (e) => {
		if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
			e.preventDefault();
			searchInput?.focus();
		}
		if (e.key === '/') {
			if (document.activeElement !== searchInput) {
				e.preventDefault();
				searchInput?.focus();
			}
		}
	});
</script>
